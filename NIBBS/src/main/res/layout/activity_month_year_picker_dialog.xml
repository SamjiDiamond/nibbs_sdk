<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gold1" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/spinner_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/date_month_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/up_one"
                android:tag="up"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_arrow_up"
                android:visibility="gone"/>
            <NumberPicker
                android:id="@+id/picker_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:id="@+id/date_month"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/down_one"
                android:tag="down"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_arrow_down"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/date_day_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/up_two"
                android:tag="up"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_arrow_up"
                android:visibility="gone"/>
            <NumberPicker
                android:id="@+id/picker_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:id="@+id/date_day"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/down_two"
                android:tag="down"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_arrow_down"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/date_year_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/up_three"
                android:tag="up"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_arrow_up"
                android:visibility="gone"/>
            <NumberPicker
                android:id="@+id/picker_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:id="@+id/date_year"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/down_three"
                android:tag="down"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_arrow_down"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/spinner_area"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/action_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator">
        <TextView
            android:gravity="center"
            android:id="@+id/cancel_button"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"/>
        <TextView
            android:gravity="center"
            android:id="@+id/ok_button"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ok" android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="#ededed"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_alignBottom="@+id/action_area"
        android:layout_centerInParent="true"/>
</RelativeLayout>